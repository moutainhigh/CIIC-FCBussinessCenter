    </sql>

	<sql id="historyTaskListField">
        t1.task_code,t1.management_name,t1.management_id,t1.batch_code,t1.grant_cycle,t1.payment_total_sum,t1.total_person_count,
        t1.chinese_count,t1.foreigner_count,t1.grant_date,t1.task_status,'' as task_status_name, t1.task_type, t1.task_status, t1.approved_opinion
	</sql>

    <sql id="logInfoField">
        t.task_code, t.operator_user_id, t.modified_time, t.task_status
    </sql>

	<select id="rejectList" resultMap="PageResultMap">
		select
		  <include refid="historyTaskListField"></include>
		from
          sg_salary_grant_task_history t1
        <where>
            <if test="taskCode != null and taskCode != ''">
                and t1.task_code = #{taskCode}
            </if>
            <if test="managementId != null and managementId != ''">
                and t1.management_id = #{managementId}
            </if>
            <if test="managementName != null and managementName != ''">
                and t1.management_name like concat('%', #{managementName, jdbcType=VARCHAR}, '%')
            </if>
            <if test="batchCode != null and batchCode != ''">
                and t1.batch_code = #{batchCode}
            </if>
            <if test="grantMode != null and grantMode != ''">
                and t1.grant_mode like concat('%', #{grantMode, jdbcType=VARCHAR}, '')
            </if>
            <if test="grantCycle != null and grantCycle != ''">
                and t1.grant_cycle = #{grantCycle}
            </if>
            <if test="userId != null and userId != ''">
                and (t1.operator_user_id = #{userId} or t1.approve_user_id = #{userId})
            </if>
            and
              t1.task_status in('3','8','9')
            and
              t1.task_type in (0, 1)
            and
              t1.is_active=1
        </where>
		order by
		  t1.task_code
	</select>

	<select id="invalidList" resultMap="PageResultMap">
        select
        <include refid="historyTaskListField"></include>
        from
        sg_salary_grant_task_history t1
        <where>
            <if test="taskCode != null and taskCode != ''">
                and t1.task_code = #{taskCode}
            </if>
            <if test="managementId != null and managementId != ''">
                and t1.management_id = #{managementId}
            </if>
            <if test="managementName != null and managementName != ''">
                and t1.management_name like concat('%', #{managementName, jdbcType=VARCHAR}, '%')
            </if>
            <if test="batchCode != null and batchCode != ''">
                and t1.batch_code = #{batchCode}
            </if>
            <if test="grantMode != null and grantMode != ''">
                and t1.grant_mode  like concat('%', #{grantMode, jdbcType=VARCHAR}, '')
            </if>
            <if test="grantCycle != null and grantCycle != ''">
                and t1.grant_cycle = #{grantCycle}
            </if>
            <if test="userId != null and userId != ''">
                and (t1.operator_user_id = #{userId} or t1.approve_user_id = #{userId})
            </if>
            and
              t1.task_status = '4'
            and
              t1.task_type = 0
            and
              t1.is_active=1
        </where>
        order by
          t1.task_code
	</select>

    <select id="selectTaskByTaskCode" resultMap="PageResultMap">
        select
          <include refid="sgDetailField"></include>
        from
          sg_salary_grant_task_history t1
        where
          t1.task_code = #{taskCode}
        and
          t1.is_active=1
        order by
          t1.task_code
    </select>

    <select id="operation" resultMap="LogInfoResultMap">
        select
          <include refid="logInfoField"></include>
        from
          sg_salary_grant_task_history t
        where
          t.task_code = #{taskCode}
        and
          t.is_active=1
        order by
          t.task_code
    </select>

</mapper>
