    <version>1.0.0</version>

    <dependencies>
        <dependency>
            <groupId>com.ciicsh</groupId>
            <artifactId>GT1.FCSupportCenter.SupplierGrantQueryService.Dao</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>com.ciicsh</groupId>
            <artifactId>GT1.FCSupportCenter.Service.Entity</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>com.ciicsh</groupId>
            <artifactId>GT1.FCSupportCenter.SupplierGrantQueryService.Business</artifactId>
